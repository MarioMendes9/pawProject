                </tr>
                <tr>
                        <td>Tipo Utilizador</td>
                        <td>:</td>
                        <td><%= user.tipoU %></td>
                      </tr>
            </tbody>
        </table>
        <h3><a href="/admin/edit/<%= user._id%>">EDIT</a></h3>
        <form action="/admin/delete/<%= user._id%>" method="post">
            <button type="submit">DELETE</button>
        </form>
    </div>
