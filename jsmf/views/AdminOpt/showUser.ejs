        <table>
            <tbody>
                <tr>
                    <td>Username</td>
                    <td>:</td>
                    <td><%= user.username %></td>
                </tr>
                <tr>
                    <td>IBAN</td>
                    <td>:</td>
                    <td><%= user.IBAN %></td>
                </tr>
                <tr>
                <tr>
                    <td>localizacao</td>
                    <td>:</td>
                    <td><%= user.localizacao %></td>
                </tr>
                <tr>
                    <td>Nome completo</td>
