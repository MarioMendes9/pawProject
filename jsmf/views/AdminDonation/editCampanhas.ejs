<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Edit Campanhas</title>
    <link rel='stylesheet' href='/stylesheets/WalpaperPageStyle.css' />
</head>

<body>
    <div class="container">
        <div class="justify-content-md-center">
            <h3><a href="/admin/getCampanhas">Campanhas List</a></h3>
            <h1 class="font-weight-bold">Edit Campanhas</h1>

            <form action="/admin/editCamp/<%= campanha._id %>" method="POST" enctype="multipart/form-data">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-dark">
                        <tbody>
                            <tr>
                                <td>Estado</td>
                                <td>
                                    <select name="estado" id="exampleFormControlSelect1">
                                        <% if(campanha.estado == true){ %>
                                        <option value="true">Ativo</option>
                                        <option value="false">Nao Ativo</option>
                                        <% } else {%>
                                        <option value="false">Nao Ativo</option>
                                        <option value="true">Ativo</option>
                                        <% } %>
                                </td>
                                <!-- Sei la -->

                            </tr>
                            <tr>
                                <td>Description</td>
                                <td><input type="text" name="description" value="<%= campanha.description %>" /></td>
                            </tr>
                            <tr>
                            <tr>
                                <td>Target Value</td>
                                <td><input type="number" name="targetValue" value="<%= campanha.targetValue %>"
                                        min="1" /></td>
                            </tr>
                            <td>logoName</td>

                            <td>
                                <input type="hidden" name="oldLog" value="<%= campanha.logoName %>">
                                <input type="file" id="file" name="logo" accept="image/*">
                            </td>
                            </tr>
                            <tr>
                                <td>IBAN</td>
                                <td><input type="text" name="IBAN" value="<%= campanha.IBAN %>" /></td>

                            </tr>
                            <tr>
                                <td>Responsaveis</td>
                                <td>
                                    <table class="table table-striped table-bordered table-dark">

                                        <% for(var i =0; i < campanha.responsaveis.length; i++) { %>
                                        <tr>
                                            <td><input type="text" name="responsaveis"
                                                    value="<%= campanha.responsaveis[i] %>" /></td>
                                        </tr>
                                        <% } %>

                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>