<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Campanhas List</title>
    <link rel='stylesheet' href='/stylesheets/registerStyle.css' />
</head>

<body>
    <div class="container">
        <div class="justify-content-md-center">
            <h3><a href="/admin/getCampanhas">Campanha List</a></h3>
            <h1 class="font-weight-bold">Donation List</h1><br>
            <% if(campanha.length>0) { %>
            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th scope="col">Users</th>
                        <th scope="col">Donations</th>
                    </tr>
                </thead>

                <tbody>

                    <% for(var i=0; i<campanha.donations.length;i++) { %>
                    <tr>
                        <td><%= campanha.donations[i].user%></td>
                        <td><a href="DEFENIR" class="nameList"><%= campanha.donations[i].montante%></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <% } else { %>
            <div>No Donations found.</div>
            <% } %>
        </div>
    </div>
</body>

</html>